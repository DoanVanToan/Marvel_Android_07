<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.nguyenmy.marveladroid_7.screen.main.MainActivity">

    <data>

        <variable
            name="mainViewModel"
            type="edu.nguyenmy.marveladroid_7.screen.main.MainViewModel" />

        <variable
            name="adapter"
            type="edu.nguyenmy.marveladroid_7.screen.main.MainAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_action_menu"
            app:title="@string/toolbar_title_detail">

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/image_home_screen" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="GridLayoutManager"
            app:recyclerAdapter="@{adapter}"
            app:spanCount="2">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</layout>
